#include <stdio.h>

int main()
{

    int income;
    printf("Enter your Income\n");
    scanf("%d", &income);

    int tax1 = (((income - 250000) * 5) / 100);
    int tax2 = ((((income - 500000) * 20) / 100) + 12500);
    int tax3 = ((((income = 1000000) * 30) / 100) + 112500);

    if (income <= 250000)
    {
        printf("You have no Income Tax");
    }

    else if (income > 250000 && income <= 500000)
    {
        printf("Your Income Tax is %d rupees", tax1);
    }

    else if (income > 500000 && income <= 1000000)
    {
        printf("Your Income Tax is %d rupees", tax1);
    }

    else if (income > 1000000)
    {
        printf("Your Income Tax is %d rupees", tax3);
    }

    return 0;
}
